<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip details"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#008000"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/tvMatchName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Palestine vs Jordan"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#008000"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvStadium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stadium : Amman International Stadium"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Destination: Amman - Jordan"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date: March 15, 2026"
                    android:textSize="18sp"
                    android:textColor="#D32F2F"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time: 8:30 PM"
                    android:textSize="18sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination Information"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#008000"
            android:layout_marginBottom="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/ivCountryFlag"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/jordan"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvCountryInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="#333333"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Book a flight now"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#008000"
            android:layout_marginTop="30dp"
            android:elevation="10dp"/>
    </LinearLayout>
</ScrollView>